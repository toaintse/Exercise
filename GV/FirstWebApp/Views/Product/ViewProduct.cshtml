@using FirstWebApp.Models
@model Product

<div>
    @if(Model is null)
    {
        <div>Khong co san pham theo yeu cau</div>

    }
    else
    {
        <h1>Product's info</h1>
        <div>
            Id: @Model.ProductId
        </div>
        <div>
            Name: @Model.ProductName
        </div>
        <div>
            UnitPrice: @Model.UnitPrice
        </div>
        <div>
            Category: @Model.Category.CategoryName
        </div>
        <div>
            Supplier: @Model.Supplier.CompanyName
        </div>
    }
    
</div>
